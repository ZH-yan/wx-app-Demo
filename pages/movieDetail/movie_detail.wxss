/* pages/movieDetail/movie_detail.wxss */
.movieDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie_img {
  width: 75%;
  height: 700rpx;
  margin: 20rpx 0;
}

.movie_name {
  font-size: 40rpx;
  font-weight: bold;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.movie_detail movie_directors {
  flex-direction: row;
}

button {
  width: 70%;
  height: 80rpx;
  background: green;
  color: #fff;
  line-height: 80rpx;
  margin-top: 50rpx;
}